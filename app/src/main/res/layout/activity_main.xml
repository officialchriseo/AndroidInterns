    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/backgrnd"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        />

    <TextView
        android:id="@+id/name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ekene Christian"
        android:textSize="20sp"
        android:textColor="#000"
        android:layout_below="@id/profile_image"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/email_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ekenechristian62@gmail.com"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/name_text_view"
        android:textStyle="italic"
        android:textColor="#131212"/>

    <TextView
        android:id="@+id/profile_detail"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="I am an android developer, working on building cool stuffs for the android platform."
        android:textColor="#000"
        android:layout_below="@id/email_text"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"/>

    <ImageView
        android:id="@+id/schedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/schedule"
        android:layout_below="@id/profile_detail"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/joined_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Joined 2019"
        android:layout_below="@id/profile_detail"
        android:layout_toRightOf="@id/schedule"
        android:layout_marginTop="12dp"/>

    <TextView
